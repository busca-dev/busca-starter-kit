// header
// -----------------------------------------
//logo
.logo-container
	col(3)
	display flex
	vertical-align(middle)
	justify(center)

.logo-container img
	max-width 100%
	display block
	height auto

//menu
.menu
	col(9)
	display flex
	vertical-align(middle)
	justify(right)

.menu ul
	list-style none
	margin 0
	padding 0

.menu ul li
	display inline-block

.menu ul li a
	text-decoration none
	display inline-block
	padding 10px
	color #000
	transition background-color .3s, color .3s

.menu ul li a:hover
	background-color cor-principal
	color #fff


@media screen and (max-width 480px)
	.logo-container
		col(12)
	.menu
		col(12)
		padding 0
		margin 0
	.menu ul
		margin 0 auto
		display block
		col(12)

	.menu li
		text-align center
		col(12)
		margin-top 5px
	.menu ul li a
		col(12)
